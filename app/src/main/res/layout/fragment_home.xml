<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <ImageView
        android:id="@+id/search_bar"
        android:layout_width="890dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
         />




    <RelativeLayout
        android:layout_below="@+id/search_bar"
        android:id="@+id/static2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/shopping"
            android:layout_width="565dp"
            android:layout_height="328dp"
            android:src="@drawable/shopping"/>

        <LinearLayout
            android:layout_below="@+id/shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dine"
                android:layout_width="182dp"
                android:layout_height="200dp"
                android:src="@drawable/dine"
                />

            <ImageView
                android:id="@+id/deals"
                android:layout_marginLeft="10dp"
                android:layout_width="182dp"
                android:layout_height="200dp"
                android:src="@drawable/deals"
                />

            <ImageView
                android:id="@+id/exploremall"
                android:layout_marginLeft="10dp"
                android:layout_width="182dp"
                android:layout_height="200dp"
                android:src="@drawable/exploremall"
               />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/static3"
        android:layout_below="@+id/search_bar"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/static2"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/amenities"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:src="@drawable/amenities"
            android:adjustViewBounds="true"/>


        <ImageView
            android:id="@+id/fashion"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/amenities"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/salon"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/entertainment"
            android:layout_below="@+id/fashion"
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/entertainment"
            android:adjustViewBounds="true"/>

    </RelativeLayout>




</RelativeLayout>